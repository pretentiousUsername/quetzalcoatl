\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{packages/font_sets}[2025/04/28 Font sets]

\RequirePackage{fontspec}
\RequirePackage{unicode-math}
\RequirePackage{xcolor}
\RequirePackage[noindentafter]{titlesec}
\RequirePackage{relsize}
\RequirePackage{ifthen}

\newcommand{\marginsecnumber}[1]{%
  \makebox[0pt][r]{#1\hspace{6pt}}%
}

\newboolean{\regularStyle}\setboolean{\regularStyle}{false}
\newboolean{\knuthStyle}\setboolean{\knuthStyle}{false}
\newboolean{\utopiaStyle}\setboolean{\utopiaStyle}{false}
\newboolean{\pretentiousStyle}\setboolean{\pretentiousStyle}{false}

\DeclareOption{style}{
    \ifthenelse{\equal{style}{regular}}{\setboolean{\regularStyle}{true}}{}
    \ifthenelse{\equal{style}{knuth}}{\setboolean{\knuthStyle}{true}}{}
    \ifthenelse{\equal{style}{utopia}}{\setboolean{\utopiaStyle}{true}}{}
    \ifthenelse{\equal{style}{knuth}}{\setboolean{\pretentiousStyle}{true}}{}
}


\ifthenelse{\regularStyle}{
    \RequirePackage{\packageDir/fonts/regular}
    \RequirePackage{\packageDir/headers/regular}
}{}

\ifthenelse{\regularStyle}{
    \RequirePackage{\packageDir/fonts/knuth}
    \RequirePackage{\packageDir/headers/knuth}
}{}

\ifthenelse{\regularStyle}{
    \RequirePackage{\packageDir/fonts/utopia}
    \RequirePackage{\packageDir/headers/utopia}
}{}

\ifthenelse{\regularStyle}{
    \RequirePackage{\packageDir/fonts/pretentious}
    \RequirePackage{\packageDir/headers/pretentious}
}{}





