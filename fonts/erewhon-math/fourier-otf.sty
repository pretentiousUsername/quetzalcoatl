\newcommand*{\Store@KV@Option}[2]{%
  \FOTtoksM=\expandafter{\the\FOTtoksM #1={#2},}
  \def\FOT@opt{#1}%
  \def\FOT@fullos{Numbers}%
  \def\FOT@scale{Scale}%
